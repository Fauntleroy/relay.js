$left_bar_width = 250px;
$right_bar_width = 200px;
$channel_title_height = 48px;
$new_message_height = 41px;

body {

	color: rgb( 75, 75, 75 );
	background: #eee url('http://subtlepatterns.com/patterns/vintage_speckles.png');

}

h1, h2, h3, h4, h5, h6, legend {

}

#logo {

	font-family: 'roboto', sans-serif;
	font-weight: 300;
	margin-left: 15px;
	color: rgb( 135, 135, 135 );
	text-shadow: 0px 1px 0px rgb( 255, 255, 255 );

}

#connections {

	position: absolute;
	top: 60px;
	bottom: 0;
	left: 0;
	width: $left_bar_width;

}

#channel {

	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: $left_bar_width;

	div.info {

		margin-right: $right_bar_width;

		h2 {

			display: inline-block;

		}

		sub.topic {

			bottom: 0;

		}

	}

	div.messages {

		position: absolute;
		top: $channel_title_height;
		right: $right_bar_width;
		bottom: 0;
		left: 0;

		ul.list {

			list-style: none;
			overflow: auto;
			position: absolute
			top: 0;
			right: 0;
			bottom: $new_message_height + 20px;
			left: 0;
			margin: 0;
			padding: 0 8px;

		}

		form.new {

			position: absolute;
			right: 0;
			bottom: 0;
			left: 0;
			height: $new_message_height;
			margin: 0;
			padding: 10px;

		}

	}

	div.users {

		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		width: $right_bar_width;

	}

}