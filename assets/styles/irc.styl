$left_bar_width = 250px;
$right_bar_width = 200px;
$channel_title_height = 48px;
$new_message_height = 41px;

@-webkit-keyframes alpha {
	0% { color:	rgb( 0, 215, 115 ); }
	25% { color: rgb( 0, 167, 215 ); }
	50% { color: rgb( 100, 125, 255 ); }
	75% { color: rgb( 210, 0, 255 ); }
	100% { color:	rgb( 0, 215, 185 ); }
}

body {

	color: rgb( 75, 75, 75 );
	background: #eee url('/images/vintage_speckles.png');

}

h1, h2, h3, h4, h5, h6, legend {

}

#logo {

	width: $left_bar_width;
	text-align: center;

	> h1 {

		display: inline-block;
		padding: 5px;
		margin: 10px 0;
		font-family: 'Roboto', sans-serif;
		font-weight: 300;
		text-shadow: 0px 1px 0px rgb( 255, 255, 255 );
		color: rgb( 144, 156, 168 );

	}

	> sub {

		opacity: 0.6;
		margin-left: -5px;
		font: italic 20px Georgia, serif;
		-webkit-animation: alpha 12s linear infinite;
		
	}

}

#connections {

	position: absolute;
	top: 75px;
	bottom: 0;
	left: 0;
	width: $left_bar_width;

}

#channel {

	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: $left_bar_width;

	div.info {

		margin-right: $right_bar_width;

		h2 {

			display: inline-block;

		}

		sub.topic {

			bottom: 0;

		}

	}

	div.messages {

		position: absolute;
		top: $channel_title_height;
		right: $right_bar_width;
		bottom: 0;
		left: 0;

		div.scroll {

			overflow: auto;
			position: absolute
			top: 0;
			right: 0;
			bottom: $new_message_height + 20px;
			left: 0;

		}

		form.new {

			position: absolute;
			right: 0;
			bottom: 0;
			left: 0;
			height: $new_message_height;
			margin: 0;
			padding: 10px;

		}

	}

	div.users {

		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		width: $right_bar_width;

	}

}