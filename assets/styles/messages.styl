div.messages {

	ul.list, form.new {
		//box-shadow: 0 0 60px rgba(0,0,0,.1);
		inset 0 1px 0 hsla(0, 100%, 100%, 0.2), 0 1px 2px hsla(0, 0%, 0%, 0.05)
	}
	ul.list {
		background: #FFF;
		border-radius: 5px 5px 0 0;
		border-top: 5px solid #FFF;

		> li {
			padding: 5px 20px;

			&.message {
				margin: 0;
				padding: 5px 20px;
				border-bottom: rgba( 225, 225, 225, .45 ) 1px solid;
				background: #fff;

				h5.nick {
					color: #666;
					margin: 0;
					font-size: 14px;
					font-weight: 800;

				}

				ul.contents {

					list-style-type: none;
					margin: 0;
					padding: 0;

					li {
						color: #888;

						&:hover {
							color: #444; 

							var.timestamp {
								opacity: .75;
							}
						}
					}

				}

				div.inline.image,
				div.inline.youtube {
					display: inline-block;
					padding: 5px 0;
					width: 80%;

					img {

						max-width: 360px;
						max-height: 360px;
						//box-shadow: 0px 2px 5px 0px rgba( 0, 0, 0, 0.25 );

					}

				}

				div.inline.youtube {

					a {

						position: relative;

						&:before {

							content: 'â–¶';
							position: absolute;
							top: 50%;
							left: 50%;
							width: 40px;
							height: 40px;
							margin: -20px 0 0 -20px;
							border-radius: 50%;
							font-family: 'arial', sans-serif;
							font-size: 26px;
							line-height: 36px;
							text-align: center;
							vertical-align: middle;
							background: rgb( 0, 0, 0 );

						}

					}

				}

			}

			&.join {
				background: hsla(92,36,50, .15);
				color: hsla(92,36,50, 1);

				i {
					opacity: .25;
				}

			}

			&.part {
				opacity: .25;
			}

			&.action {
				color: salmon;
			}

			&.error {

				border-bottom: rgb( 235, 190, 190 ) 1px solid;
				background: rgb( 252, 213, 213 );
				color: rgb( 148, 63, 63 );
				padding: 10px 0;

			}

			.text {
				display: inline-block;
				width: 90%;
			}

			var.timestamp {
				float: right;
				font-size: 12px;
				font-style: normal;
				text-align: right;
				opacity: 0.3;

			}

		}

	}

	form.new {

		textarea {
			//background: hsl(0, 0%, 94.5%);
			border: none;
			width: 100%;
 			margin: 0;
			border-radius: 0;
			box-shadow: none;
			resize: none;
			padding: 6px 20px;

			&:focus {
				background: #FFF;
				box-shadow: none;
			}

		}

	}

}