div.messages {

	ul.list {

		> li {

			padding: 3px 13px;

			&.message {

				margin: 6px 0;
				padding: 10px 13px;
				border-top: rgb( 250,250,250 ) 1px solid;
				border-right: rgb( 235,235,235 ) 1px solid;
				border-left: rgb( 235,235,235 ) 1px solid;
				border-bottom: rgb( 225,225,225 ) 1px solid;
				background: #fff;

				h5.nick {

					margin: 5px 0 10px 0;
					font-size: 16px;
					font-weight: 800;

				}

				ul.contents {

					list-style-type: none;
					margin: 0;
					padding: 0;

				}

			}

			var.timestamp {

				opacity: 0.5;
				float: right;
				font-size: 12px;
				font-style: normal;

			}

		}

	}

	form.new {

		textarea {

			width: 450px;

		}

	}

}