div.messages {

	background: rgb( 255, 255, 255 );
	box-shadow: 0px 2px 5px 0px rgba( 0, 0, 0, 0.1 );

	ul.list {

		word-wrap: break-word;
		list-style: none;
		margin: 0;
		padding: 0 8px;

		> li {

			padding: 5px 80px 5px 13px;
			border-bottom: rgb( 235, 235, 235 ) 1px solid;

			&:first-child {

				margin-top: 8px;

			}

			&.message {

				margin: 0;
				padding: 10px 80px 10px 13px;
				background: #fff;

				&.self {

					background: rgb( 245, 253, 255 );

				}

				h5.nick {

					margin: 5px 0 10px 0;
					font-size: 16px;
					font-weight: bold;

				}

				div.inline.image,
				div.inline.youtube {

					padding: 5px 0;

					img {

						max-width: 360px;
						max-height: 360px;
						box-shadow: 0px 2px 5px 0px rgba( 0, 0, 0, 0.25 );

					}

				}

				div.inline.youtube {

					a {

						position: relative;

						&:before {

							content: 'â–¶';
							position: absolute;
							top: 50%;
							left: 50%;
							width: 40px;
							height: 40px;
							margin: -20px 0 0 -20px;
							border-radius: 50%;
							font-family: 'arial', sans-serif;
							font-size: 26px;
							line-height: 36px;
							text-align: center;
							vertical-align: middle;
							background: rgb( 0, 0, 0 );

						}

					}

				}

				div.inline.gist {

					padding: 5px 0;

					div.gist-data {

						overflow: auto;
						max-height: 190px;
						box-shadow: 0px 2px 5px 0px rgba( 0, 0, 0, 0.25 );

					}

				}

			}

			&.join,
			&.part,
			&.nick,
			&.mode {

				font-style: italic;
				color: rgb( 185, 195, 205 );

			}

			&.error {

				border-bottom: rgb( 255, 213, 213 ) 1px solid;
				color: rgb( 218, 62, 62 );

			}

			&.motd {

				pre {

					margin: 0;
					padding: 0;
					border: none;
					font-size: inherit;
					background: transparent;

				}

			}

			&.whois {

				dl {

					margin: 0;

				}

				dt {

					float: left;
					margin-right: 10px;

				}

			}

			ul.contents {

				list-style-type: none;
				margin: 0;
				padding: 0;

				> li {

					&.mention {

						font-weight: bold;

					}

				}

			}

			var.timestamp {

				float: right;
				margin-right: -67px;
				font-family: 'Roboto', sans-serif;
				font-size: 11px;
				font-style: normal;
				color: rgba( 0, 0, 0, 0.25 );

			}

		}

	}

	form.new {

		padding: 10px;

		textarea {

			width: 100%;
			height: 41px;
			margin: 0;
			border: none;
			box-sizing: border-box;
			border-radius: 0;
			background: rgb( 250, 250, 250 );
			box-shadow: inset 0 1px 1px rgba( 0, 0, 0, 0.15 );
			outline: rgba( 0, 185, 255, 0 ) 1px solid;
			-webkit-transition: all 200ms ease-out;
			-moz-transition: all 200ms ease-out;
			-ms-transition: all 200ms ease-out;
			-o-transition: all 200ms ease-out;
			transition: all 200ms ease-out;

			&:focus {

				outline: rgba( 0, 185, 255, 0.2 ) 1px solid;
				background: rgb( 255, 255, 255 );

				-webkit-transition: all 100ms ease-in;
				-moz-transition: all 100ms ease-in;
				-ms-transition: all 100ms ease-in;
				-o-transition: all 100ms ease-in;
				transition: all 100ms ease-in;

			}

		}

	}

}