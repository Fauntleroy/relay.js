div.messages {

	ul.list {

		> li {

			padding: 3px 13px;

			&.message {

				margin: 0;
				padding: 10px 13px;
				border-top: rgb( 250, 250, 250 ) 1px solid;
				border-left: rgb( 235, 235, 235 ) 3px solid;
				border-bottom: rgb( 225, 225, 225 ) 1px solid;
				background: #fff;

				h5.nick {

					margin: 5px 0 10px 0;
					font-size: 16px;
					font-weight: 800;

				}

				ul.contents {

					list-style-type: none;
					margin: 0;
					padding: 0;

				}

				div.inline.image {

					padding: 5px 0;

					img {

						max-width: 600px;
						max-height: 300px;

					}

				}

			}

			&.error {

				padding-top: 7px;
				padding-bottom: 7px;
				border-bottom: rgb( 235, 190, 190 ) 1px solid;
				background: rgb( 252, 213, 213 );
				color: rgb( 148, 63, 63 );

			}

			var.timestamp {

				opacity: 0.5;
				float: right;
				font-size: 12px;
				font-style: normal;

			}

		}

	}

	form.new {

		textarea {

			width: 100%;
			height: 41px;
			margin: 0;
			box-sizing: border-box;
			border-radius: 0;

		}

	}

}