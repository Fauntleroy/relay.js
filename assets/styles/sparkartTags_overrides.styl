div.sparkart-tags {

	display: inline-block;

	ul.tags {

		display: inline-block;
		width: 215px;
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
		-webkit-transition: border linear 0.2s, box-shadow linear 0.2s;
		background-color: rgb( 255, 255, 255 );
		border: 1px solid #cccccc;
		border-radius: 4px;

		input {

			-webkit-box-shadow: none;
			box-shadow: none;

		}

	}

}