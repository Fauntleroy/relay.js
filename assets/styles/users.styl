div.users {

	box-sizing: border-box;
	padding: 14px 10px 0 14px;

	h6 {

		color: rgb( 153, 153, 153 );

		var { font-style: normal; }

	}

	ul.list {

		list-style-type: none;
		overflow: auto;
		position: absolute;
		top: 35px;
		right: 0;
		bottom: 0;
		left: 0;
		margin: 0;
		padding: 0 10px 0 14px;

		> li {

			&.inactive {

				opacity: 0.75;

				a {

					color: rgb( 130, 130, 130 );

				}

				var.idle {

					float: right;
					font-family: 'Roboto', sans-serif;
					font-style: normal;
					font-size: 11px;
					color: rgba( 0, 0, 0, 0.45 );

				}

			}

		}

	}

}