div.users {

	ul.list {

		list-style-type: none;
		overflow: auto;
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		margin: 0;
		padding: 14px 8px 0 14px;

		> li {

			&.inactive {

				opacity: 0.75;

				a {

					color: rgb( 130, 130, 130 );

				}

				var.idle {

					font-size: 12px;
					font-style: none;

				}

			}

		}

	}

}